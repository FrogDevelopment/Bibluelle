<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context="fr.frogdevelopment.bibluelle.search.BookDetailFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/detail_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Subtitle"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_title"/>

        <ImageView
            android:id="@+id/detail_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="128dp"
            android:minWidth="128dp"
            android:transitionName="cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_sub_title"/>

        <TextView
            android:id="@+id/detail_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Author"
            android:textIsSelectable="true"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_cover"
            app:layout_constraintTop_toBottomOf="@+id/detail_sub_title"/>

        <TextView
            android:id="@+id/detail_publisher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="publisher"
            android:textIsSelectable="true"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_cover"
            app:layout_constraintTop_toBottomOf="@+id/detail_author"/>

        <TextView
            android:id="@+id/detail_nb_pages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="123 pages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_cover"
            app:layout_constraintTop_toBottomOf="@+id/detail_publication_date"/>

        <TextView
            android:id="@+id/detail_publication_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Publié le 28 octobre 2014"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_cover"
            app:layout_constraintTop_toBottomOf="@+id/detail_publisher"/>

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur placerat ipsum sed nisl ultricies, vitae auctor lacus venenatis. Mauris dapibus ex vitae felis sagittis cursus quis id ligula. Aenean feugiat, ipsum non fermentum volutpat, felis leo fermentum arcu, at mattis ante mi sit amet est. Phasellus nec enim magna. Praesent sit amet lacus non metus dictum lacinia a a velit. Pellentesque eu aliquam orci. Suspendisse sit amet nulla non sapien bibendum rutrum. Donec sed egestas metus. Integer dignissim ornare aliquet. Nam sagittis, ex sit amet finibus volutpat, tellus turpis posuere augue, sed condimentum lectus risus nec urna. Curabitur ultricies ac urna at ullamcorper. Phasellus lacinia dui sit amet eros maximus scelerisque. Donec rutrum scelerisque eros, ac vulputate velit ornare tincidunt. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos."
            android:textIsSelectable="true"
            app:animation_duration="750"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_cover"/>

        <Button
            android:id="@+id/detail_show_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Lire la suite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_description"/>

        <View
            android:id="@+id/detail_separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_show_more"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_separator">

            <TableRow android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ISBN"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/detail_isbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="1234567891011"
                    android:textIsSelectable="true"/>
            </TableRow>

            <TableRow android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Catégories"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/detail_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="xxx / yyk / kkk"/>

            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>