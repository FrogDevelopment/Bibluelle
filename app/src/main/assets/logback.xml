<?xml version="1.0" encoding="utf-8"?>
<configuration debug="true">

    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>FROG</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%logger{0} : %msg%n</pattern>
        </encoder>
    </appender>

    <root level="TRACE">
        <appender-ref ref="logcat" />
    </root>

</configuration>